<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>View our campgrounds from all over the world.</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campgrounds</a>
            </p>
        </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %><!--Here campgrounds object is coming from INDEX routes-->
            <div class="col-md-3 col-sm-3">
                <div class="card">
                    <img class="card-img-top img-thumbnail" src="<%= campground.image %>">
                    <div class="card-block">
                        <h4 class="card-title"><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info!</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>