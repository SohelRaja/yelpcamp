<% include ../partials/header %>
<div class="container">
    <h2 class="text-center">Add New Comment to <%= campground.name %></h2>
    <div style="width:30%; margin:30px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Enter Your comment..">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[author]" placeholder="Author Name">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>